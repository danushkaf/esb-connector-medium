<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="medium_create_post_using_template"
       startOnLoad="true"
       statistics="disable"
       trace="disable"
       transports="http,https">
    <target>
        <inSequence>
            <property expression="json-eval($.access_token)"
                      name="access_token"
                      scope="default"
                      type="STRING"/>
            <property expression="json-eval($.authorId)"
                      name="authorid"
                      scope="default"
                      type="STRING"/>
            <property expression="json-eval($.title)"
                      name="title"
                      scope="default"
                      type="STRING"/>
            <property expression="json-eval($.contentFormat)"
                      name="contentFormat"
                      scope="default"
                      type="STRING"/>
            <property expression="json-eval($.post_type)"
                      name="post_type"
                      scope="default"
                      type="STRING"/>
            <property expression="json-eval($.param_list)"
                      name="param_list"
                      scope="default"
                      type="STRING"/>
            <property expression="json-eval($.canonicalUrl)"
                      name="canonicalUrl"
                      scope="default"
                      type="STRING"/>
            <property expression="json-eval($.tags)"
                      name="tags"
                      scope="default"
                      type="STRING"/>
            <property expression="json-eval($.publishStatus)"
                      name="publishStatus"
                      scope="default"
                      type="STRING"/>
            <medium.createPost>
            <medium.createPost>
                <access_token>{$ctx:access_token}</access_token>
                <authorId>{$ctx:authorid}</authorId>
                <title>{$ctx:title}</title>
                <contentFormat>{$ctx:contentFormat}</contentFormat>
                <post_type>{$ctx:post_type}</post_type>
                <param_list>{$ctx:param_list}</param_list>
                <canonicalUrl>{$ctx:canonicalUrl}</canonicalUrl>
                <tags>{$ctx:tags}</tags>
                <publishStatus>{$ctx:publishStatus}</publishStatus>
            </medium.createPost>
            <respond/>
        </inSequence>
        <outSequence>
            <log/>
            <send/>
        </outSequence>
    </target>
    <description/>
</proxy>
